generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id               String   @id @default(uuid())
  fullName         String
  email            String
  phone            String
  title            String
  artist           String
  genre            String
  year             Int
  condition        String
  price            Decimal  @db.Decimal(10, 2)
  fileName         String?
  fileOriginalName String?
  fileBucket       String?
  fileKey          String?
  createdAt        DateTime @default(now())

  @@index([createdAt])
}
